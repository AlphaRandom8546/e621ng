<% content_for(:secondary_links) do %>
  <menu>
    <%= subnav_link_to "List", help_pages_path %>
    <% if CurrentUser.is_admin? %>
      <%= subnav_link_to "New", new_help_page_path %>
      <% if @help && @help.id %>
        <%= subnav_link_to "Edit", edit_help_page_path(@help) %>
        <%= subnav_link_to "Delete", "#", class: 'confirmed-deletion-link', data: {noun: 'help page', target: help_page_path(@help, format: :json)} %>
        <%= subnav_link_to "Edit Wiki Page", edit_wiki_page_path(id: @help.wiki_page, help: @help.name) %>
      <% end %>
    <% end %>
    <% if @help && @related %>
      <%= render partial: 'related' %>
    <% end %>
  </menu>
<% end %>

