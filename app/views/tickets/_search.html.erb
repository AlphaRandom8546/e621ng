<%= form_search path: tickets_path do |f| %>
  <% if CurrentUser.is_admin? %>
    <%= f.input :creator_name, label: "Reporter", autocomplete: "user" %>
    <%= f.input :creator_id, label: "Reporter ID" %>
    <%= f.input :accused_name, label: "Accused", autocomplete: "user" %>
  <% end %>
  <%= f.input :type, collection: [
      ["Any", ""],
      ["User complaint", "user"],
      ["Private message complaint", "dmail"],
      ["Comment complaint", "comment"],
      ["Forum post complaint", "forum"],
      ["Blip complaint", "blip"],
      ["Wiki complaint", "wiki"],
      ["Pool complaint", "pool"],
      ["Set complaint", "set"],
      ["Post complaint", "post"]
  ] %>
  <%= f.input :status, collection: [
      ["Any", ""],
      ["Pending + Unclaimed", "pending_unclaimed"],
      ["Pending + Claimed", "pending_claimed"],
      ["Approved/investigated", "approved"],
      ["Under investigation", "partial"],
      ["Pending", "pending"],
      ["Denied", "denied"]
  ] %>
  <%= f.submit "Search" %>
<% end %>
